<div
  class='modal modal-sheet position-static d-block p-4 py-md-5'
  tabindex='-1'
  role='dialog'
  id='modalUpload'
>
  <div class='modal-dialog' role='document'>
    <div class='modal-content rounded-4 shadow'>
      <div class='modal-header p-5 pb-4 border-bottom-0'>
        <div class='container'>
          <div class='row justify-content-center'>
            <div>
              <strong class="d-inline-block mb-2 text-primary-emphasis">{{User.username}}</strong>
          <h3 class="mb-0">{{title}}</h3>
          <div class="mb-1 text-body-secondary">{{{ format_date date_created }}}</div>
          <p class="card-text mb-auto">{{description}}</p>
          <div class='d-flex justify-content-between align-items-center'>
            <div class='btn-group'>
              <a href='/' class='btn btn-sm btn-outline-secondary'>Back</a>
              {{!-- <button type='button' class='btn btn-sm btn-outline-danger' data-id='{{id}}'>Delete</button> --}}
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src='/js/post.js'></script>